{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

vertices
(
    (                  0                  0                  0 )  // 0 v0-z
    (                  1                  0                  0 )  // 1 v1-z
    (                  1                  1                  0 )  // 2 v3-z
    (                  0                  1                  0 )  // 3 v2-z
    (                  0                  0                0.1 )  // 4 v0+z
    (                  1                  0                0.1 )  // 5 v1+z
    (                  0                  1                0.1 )  // 6 v2+z
    (                  1                  1                0.1 )  // 7 v3+z
);

edges
(
);

blocks
(
    hex (0 1 2 3 4 5 6 7) b0 (80 80 1) simpleGrading (1 1 1)  // b0 (v0-z v1-z v3-z v2-z v0+z v1+z v2+z v3+z)
);

boundary
(
    FrontAndBack
    {
        type wall;
        faces
        (
            (0 1 5 4)  // f-b0-s (v0-z v1-z v1+z v0+z)
            (2 3 7 6)  // f-b0-n (v3-z v2-z v3+z v2+z)
        );
    }
    topAndBottom
    {
        type wall;
        faces
        (
            (4 5 6 7)  // f-b0-t (v0+z v1+z v2+z v3+z)
            (0 3 2 1)  // f-b0-b (v0-z v2-z v3-z v1-z)
        );
    }
    hot
    {
        type wall;
        faces
        (
            (1 2 6 5)  // f-b0-n (v1-z v3-z v2+z v1+z)
        );
    }
    cold
    {
        type wall;
        faces
        (
            (0 4 7 3)  // f-b0-w (v0-z v0+z v3+z v2-z)
        );
    }
);

mergePatchPairs
(
);

